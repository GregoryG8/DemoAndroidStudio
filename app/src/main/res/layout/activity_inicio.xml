<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Inicio">




    <EditText
        android:id="@+id/edCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Pick your user name" />

    <EditText
        android:id="@+id/edValor"
        android:layout_width="wrap_content"
        android:editable="false"
        android:layout_height="wrap_content"
        android:hint="Pick your password"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnAumentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saludar"
        android:text="Aumentar" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="volver"
        android:text="Volver" />
    <Button
        android:id="@+id/btnPintar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="pintar"
        android:text="pintar" />


</LinearLayout>